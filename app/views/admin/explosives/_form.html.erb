
<% if @explosive.errors.any? %>
<div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
        <% @explosive.errors.full_messages.each do |item|%>
            <li><%= item %></li>
        <% end %>
    </ul>   
</div>
<%end %>

<%= form_for [:admin, @explosive], html: { multipart: true }  do |f|%>
<div class="d-flex">   <br>
    <div class="orm grm flex-fill">
        Наименование <%= f.text_field(:name,{:class =>'marginsh form-control'}) %>
    </div>
 
    <div class="orm grm flex-fill">
        Кислородный баланс  <%= f.number_field(:oxygen,in: -100..1000.0, step: 0.001, :class => 'form-control') %>
    </div>
  
    <div class="orm grm flex-fill">
        Теплота взрыва  МДж/кг<%= f.number_field(:heat,in: 0.1..1000.0, step: 0.001,:class => 'form-control') %>
    </div>
    
    <div class="orm grm flex-fill">
        Скорость детонации км/с<%= f.number_field(:speed,in: 0.1..1000.0, step: 0.001,:class => 'form-control') %>
    </div>

</div> 
<br>
    <div class="orm d-flex">
    <p ><%=f.submit 'Сохранить', ({:class => 'btn btn-outline-success'})%></p>
    <p><%= link_to "Перейти", mining_explosives_path, :class=>'btn-in-home  btn-in-home btn mine-btn' %></p>
    <p ><%= link_to "Назад", :back, ({ :class => 'btn-in-home  btn btn-outline-dark text-dark'})%></p>
    </div>    
<%end%>
