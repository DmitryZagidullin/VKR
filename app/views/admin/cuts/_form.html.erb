<% if @cut.errors.any? %>
<div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
        <% @cut.errors.full_messages.each do |item|%>
        <li><%= item %></li>
        <%end %>
    </ul>
</div>
<%end%>

