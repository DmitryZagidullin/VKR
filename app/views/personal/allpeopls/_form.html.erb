<%= form_tag(search_allpeople_page_path, :method => "get", class: "form-inline") do %>  
 <div class="input-group">  
     <% if user_signed_in? %>
         <%= search_field_tag :searchpeoplall, params[:searchpeoplall], placeholder: "Введите реквизит сотрудника", class: "form-control mr-sm-2" %>  
         <div class="input-group-btn"> 
         <%= button_tag "Поиск", :class => 'btn btn-outline-primary',:name => nil%>  
         </div> 
     <% end %>
     
     <% if user_signed_in? %>
     <div> <%= link_to "Добавить", new_personal_allpeopl_path, :class=>'btn-in-home btn btn-outline-success' %></div>
     <% end %>    
     </div> 
     <br>
     <br>
 
     <br>

 <table class="table table-striped table-hover">
    <thead>
    <tr>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Профессия</th>
    <th>Сертификат</th>
   
    
    </tr>
    </thead>
    <% @allpeopl.each do |allpeopl| %> 
        
    <tbody>
    <tr>
        <td ><%=allpeopl.peopl.fn %></td>
        <td ><%=allpeopl.peopl.sn %></td>
        <td ><%=allpeopl.peopl.tn %></td>
        <td ><%=allpeopl.prof.name_prof %></td>
        <td ><%=allpeopl.sert.name_sert %></td>
   
    <% if user_signed_in? && current_user.admin? %>
        <td class="pavuk"> 
   
            <a data-confirm="Are you sure?"  rel="nofollow" data-method="delete" href="<%= personal_allpeopl_path(allpeopl)%>" class="svg-set-del">
                <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
                </svg>
            </a>
           
            <a data-toggle="tooltip" href="<%= edit_personal_allpeopl_path(allpeopl)%> " class="svg-set-prop" >
                <svg class="bi bi-tools" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M0 1l1-1 3.081 2.2a1 1 0 01.419.815v.07a1 1 0 00.293.708L10.5 9.5l.914-.305a1 1 0 011.023.242l3.356 3.356a1 1 0 010 1.414l-1.586 1.586a1 1 0 01-1.414 0l-3.356-3.356a1 1 0 01-.242-1.023L9.5 10.5 3.793 4.793a1 1 0 00-.707-.293h-.071a1 1 0 01-.814-.419L0 1zm11.354 9.646a.5.5 0 00-.708.708l3 3a.5.5 0 00.708-.708l-3-3z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M15.898 2.223a3.003 3.003 0 01-3.679 3.674L5.878 12.15a3 3 0 11-2.027-2.027l6.252-6.341A3 3 0 0113.778.1l-2.142 2.142L12 4l1.757.364 2.141-2.141zm-13.37 9.019L3.001 11l.471.242.529.026.287.445.445.287.026.529L5 13l-.242.471-.026.529-.445.287-.287.445-.529.026L3 15l-.471-.242L2 14.732l-.287-.445L1.268 14l-.026-.529L1 13l.242-.471.026-.529.445-.287.287-.445.529-.026z" clip-rule="evenodd"/>
                </svg>
            </a>
        </td>
    <% end %>
    </tr>
    </tbody>
    <% end %>
</table> 
<% end %>

<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();   
    });
 </script>